{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "code-security-audit/chains.schema.json",
  "title": "chains-document",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "chains"],
  "properties": {
    "schema_version": { "type": "integer", "const": 1 },
    "chains": {
      "type": "array",
      "items": { "$ref": "#/$defs/chain" }
    }
  },
  "$defs": {
    "chain": {
      "type": "object",
      "additionalProperties": false,
      "required": ["chain_id", "title", "steps"],
      "properties": {
        "chain_id": {
          "type": "string",
          "pattern": "^AC-[A-Za-z0-9_-]+$"
        },
        "title": { "type": "string", "minLength": 1 },
        "risk_level": {
          "type": "string",
          "enum": ["CRITICAL", "HIGH", "MEDIUM", "LOW", "INFO"]
        },
        "steps": {
          "type": "array",
          "minItems": 2,
          "items": { "$ref": "#/$defs/step" }
        },
        "narrative": { "type": "string" }
      }
    },
    "step": {
      "type": "object",
      "additionalProperties": false,
      "required": ["order", "description", "finding_refs"],
      "properties": {
        "order": { "type": "integer", "minimum": 1 },
        "description": { "type": "string", "minLength": 1 },
        "finding_refs": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "pattern": "^F-[A-Za-z0-9_-]+$"
          },
          "uniqueItems": true
        },
        "evidence_refs": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      }
    }
  }
}
